{
  "manifest_version": 3,
  "name": "MailSense - AI Email Intelligence",
  "version": "2.1.0",
  "description": "Transform Gmail with AI-powered tabs, smart categorization, and intelligent email insights",
  
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["ai-service.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "MailSense - Your Email Intelligence",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  
  "options_page": "options.html",
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["*.png", "*.jpg", "*.svg"],
      "matches": ["https://mail.google.com/*"]
    }
  ]
}