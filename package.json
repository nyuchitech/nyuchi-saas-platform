{
  "name": "nyuchi-platform",
  "type": "module",
  "version": "1.0.0",
  "description": "Nyuchi Platform - Mail Organizer & SaaS Solutions with Astro",
  "workspaces": [
    "packages/*",
    "database"
  ],
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "deploy": "astro build && wrangler deploy",
    "deploy:staging": "astro build && wrangler deploy --env staging",
    "deploy:production": "astro build && wrangler deploy --env production",
    "db:generate": "cd database && npm run db:generate",
    "db:migrate": "cd database && npm run d1:migrate",
    "db:migrate:local": "cd database && npm run d1:local",
    "db:seed": "cd database && npm run seed",
    "supabase:start": "cd database && npm run supabase:start",
    "supabase:migrate": "cd database && npm run supabase:migrate"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.4",
    "@astrojs/tailwind": "^6.0.0",
    "@supabase/supabase-js": "^2.38.4",
    "astro": "^4.0.0",
    "tailwindcss": "^4.1.12",
    "zod": "^3.22.4",
    "nanoid": "^5.0.4"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.12",
    "wrangler": "^3.22.1",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "astro",
    "mail-organizer",
    "saas",
    "cloudflare",
    "nyuchi",
    "gmail-extension",
    "d1",
    "supabase"
  ],
  "author": "Nyuchi Web Services <hello@nyuchi.com>",
  "license": "GPL-2.0-or-later"
}
