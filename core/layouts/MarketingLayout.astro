---
import '../styles/global.css';
import Header from '../shared/components/Header.astro';
import Footer from '../shared/components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  noIndex?: boolean;
}

const { title, description = "Nyuchi Africa - Pioneering technology innovation across Africa through integrated platform solutions", noIndex = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="description" content={description} />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  {noIndex && <meta name="robots" content="noindex, nofollow" />}
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  
  <!-- Typography - Roboto for body, Playfair Display for headings -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
  
  <!-- Global Starlink Theme CSS -->
  <link rel="stylesheet" href="/styles/global-theme.css" />
  
  <!-- SEO and Social Meta Tags -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content="Nyuchi Africa" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  
  <!-- Theme -->
  <meta name="theme-color" content="#000000" />
  <meta name="color-scheme" content="dark" />
  
  <title>{title}</title>
</head>

<body>
  <!-- Zimbabwe Flag Brand Strip - Vertical Left Side (Static) -->
  <div style="position: fixed; top: 0; left: 0; width: 8px; height: 100vh; display: flex; flex-direction: column; z-index: 60;">
    <div style="background: var(--zw-green); flex: 1;"></div>
    <div style="background: var(--zw-yellow); flex: 1;"></div>
    <div style="background: var(--zw-red); flex: 1;"></div>
    <div style="background: var(--zw-black); flex: 1;"></div>
  </div>
  
  <!-- Dynamic Header -->
  <Header appType="marketing" currentPath={Astro.url.pathname} />
  
  <!-- Main Content -->
  <main>
    <slot />
  </main>
  
  <!-- Shared Footer -->
  <Footer appType="marketing" />
  
  <!-- Analytics placeholder -->
  <script>
    // Marketing analytics can be added here
    console.log('Marketing site loaded');
  </script>
</body>
</html>