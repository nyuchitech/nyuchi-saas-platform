---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  noIndex?: boolean;
}

const { title, description = "Nyuchi Africa - Pioneering technology innovation across Africa through integrated platform solutions", noIndex = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="description" content={description} />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  {noIndex && <meta name="robots" content="noindex, nofollow" />}
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  
  <!-- Africa-Optimized Typography - Minimal font loads for fast networks -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;600&family=Playfair+Display:wght@400;500;600&display=swap" rel="preload" as="style" onload="this.onload=null;this.rel='stylesheet'">
  <noscript><link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;600&family=Playfair+Display:wght@400;500;600&display=swap" rel="stylesheet"></noscript>
  
  <!-- Critical CSS inline for above-fold content -->
  <style>
    /* Critical above-fold styles */
    body { font-family: system-ui, -apple-system, sans-serif; background: #000; color: #fff; margin: 0; }
    .header-enterprise { background: rgba(0,0,0,0.95); backdrop-filter: blur(20px); position: fixed; top: 0; left: 8px; right: 0; z-index: 40; }
    .container-nyuchi { max-width: 1280px; margin: 0 auto; padding: 0 2rem; }
    .brand-logo { width: 40px; height: 40px; }
    .zimbabwe-flag-strip { position: fixed; top: 0; left: 0; width: 8px; height: 100vh; z-index: 60; }
  </style>
  
  <!-- SEO and Social Meta Tags -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content="Nyuchi Africa" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  
  <!-- Theme -->
  <meta name="theme-color" content="#000000" />
  <meta name="color-scheme" content="dark" />
  
  <title>{title}</title>
</head>

<body>
  <!-- Zimbabwe Flag Brand Strip - Optimized for performance -->
  <div class="zimbabwe-flag-strip">
    <div style="background: #00A651; flex: 1;"></div>
    <div style="background: #FDD116; flex: 1;"></div>
    <div style="background: #EF3340; flex: 1;"></div>
    <div style="background: #000000; flex: 1;"></div>
  </div>
  
  <!-- Dynamic Header -->
  <Header appType="marketing" currentPath={Astro.url.pathname} />
  
  <!-- Main Content -->
  <main>
    <slot />
  </main>
  
  <!-- Shared Footer -->
  <Footer appType="marketing" />
  
  <!-- Performance and Analytics -->
  <script>
    // Fast loading optimizations for Africa
    (function() {
      // Preload critical resources
      const criticalResources = [
        '/nyuchi-logo-dark-white.png',
        '/nyuchi-logo-dark-purple.png'
      ];
      
      criticalResources.forEach(src => {
        const link = document.createElement('link');
        link.rel = 'preload';
        link.href = src;
        link.as = 'image';
        document.head.appendChild(link);
      });
      
      // Connection speed detection
      const connection = navigator.connection || navigator.mozConnection || navigator.webkitConnection;
      if (connection) {
        const isSlowConnection = connection.effectiveType === 'slow-2g' || connection.effectiveType === '2g' || connection.effectiveType === '3g';
        if (isSlowConnection) {
          document.documentElement.classList.add('slow-connection');
          // Reduce animations for slow connections
          document.documentElement.style.setProperty('--animation-duration', '0.1s');
        }
      }
      
      // Service Worker for caching (Africa-optimized)
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', function() {
          navigator.serviceWorker.register('/sw.js', { scope: '/' })
            .then(registration => console.log('SW registered'))
            .catch(error => console.log('SW registration failed'));
        });
      }
      
      // Marketing analytics
      console.log('Nyuchi Marketing Platform loaded - Africa Optimized');
    })();
  </script>
</body>
</html>