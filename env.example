# Nyuchi Platform - Environment Variables Template
# Copy this file to .env.local for local development
# For production, these values should be stored securely (GitHub Secrets, etc.)

# =====================================================
# ENVIRONMENT CONFIGURATION
# =====================================================
ENVIRONMENT=development
NODE_ENV=development

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret
SUPABASE_BUCKET_NAME=nyuchi-storage

# =====================================================
# CLOUDFLARE CONFIGURATION
# =====================================================
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
D1_DATABASE_NAME=nyuchi-platform-db

# =====================================================
# APPLICATION SECURITY
# =====================================================
JWT_SECRET=your-secure-jwt-secret-here
API_SECRET_KEY=your-api-secret-key

# =====================================================
# FEATURE FLAGS
# =====================================================
ENABLE_D1_BACKUP=false
ENABLE_SUPABASE_FUNCTIONS=true
ENABLE_REPLICATION=false
ANALYTICS_ENABLED=true

# =====================================================
# EXTERNAL INTEGRATIONS
# =====================================================

# Gmail Integration
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret

# WordPress Integration
WORDPRESS_API_BASE=your-wordpress-api-base

# Chrome Extension
EXTENSION_ID=your-chrome-extension-id

# =====================================================
# PAYMENT PROCESSORS (Optional)
# =====================================================

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Paddle (Alternative)
PADDLE_PUBLIC_KEY=pk_test_your-paddle-public-key
PADDLE_SECRET_KEY=your-paddle-secret-key

# =====================================================
# AI SERVICES (Optional)
# =====================================================
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# =====================================================
# MONITORING & LOGGING
# =====================================================
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# =====================================================
# DEVELOPMENT ONLY
# =====================================================
# These should NEVER be used in production
DEV_MOCK_AUTH=false
DEV_SKIP_EMAIL_VERIFICATION=false
