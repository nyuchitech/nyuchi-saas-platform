<MarketingLayout title="Harare Metro - News Aggregator for Zimbabwe">
  <!-- Hero Section -->
  <section class="hero-marketing">
    <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black/50"></div>
    <div class="container-marketing relative z-10">
      <div class="text-center max-w-6xl mx-auto">
        <div class="badge-zw-red mb-8">
          <img src="/hm-logo-horizontal.svg" alt="Harare Metro Logo" class="w-4 h-4 mr-2 object-contain" />
