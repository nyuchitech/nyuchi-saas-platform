---
import Layout from '../../core/layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="Admin Dashboard - Nyuchi Platform">
  <Header />
  
  <main class="min-h-screen bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Dashboard Header -->
      <div class="mb-8">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Admin Dashboard</h1>
            <p class="text-gray-600">Monitor and manage the Nyuchi Platform</p>
          </div>
          <div class="text-right">
            <p class="text-sm text-gray-500">Logged in as:</p>
            <p class="text-lg font-semibold text-gray-900" id="user-name">Loading...</p>
            <p class="text-sm text-gray-600" id="user-role">Loading...</p>
            <button onclick="handleLogout()" class="mt-2 text-sm text-red-600 hover:text-red-700 transition-colors">
              Logout
            </button>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-6 mb-8" id="admin-actions">
        <a href="/admin/users" class="admin-action block bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow" data-permission="admin.users.manage">
          <div class="flex items-center">
            <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-bold text-gray-900">Users</h3>
              <p class="text-sm text-gray-600">Manage users & roles</p>
            </div>
          </div>
        </a>

        <a href="/admin/organizations" class="admin-action block bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow" data-permission="admin.system.manage">
          <div class="flex items-center">
            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-bold text-gray-900">Organizations</h3>
              <p class="text-sm text-gray-600">Manage companies</p>
            </div>
          </div>
        </a>

        <a href="/admin/blog" class="admin-action block bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow" data-permission="admin.blog.manage">
          <div class="flex items-center">
            <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-bold text-gray-900">Blog</h3>
              <p class="text-sm text-gray-600">Manage articles</p>
            </div>
          </div>
        </a>

        <a href="/admin/system" class="admin-action block bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow" data-permission="admin.system.manage">
          <div class="flex items-center">
            <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-bold text-gray-900">System</h3>
              <p class="text-sm text-gray-600">Health & monitoring</p>
            </div>
          </div>
        </a>

        <a href="/admin/analytics" class="admin-action block bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow" data-permission="admin.analytics.view">
          <div class="flex items-center">
            <div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-bold text-gray-900">Analytics</h3>
              <p class="text-sm text-gray-600">Platform insights</p>
            </div>
          </div>
        </a>
      </div>

      <!-- System Overview -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
        <!-- System Health -->
        <div class="bg-white rounded-lg shadow">
          <div class="p-6 border-b border-gray-200">
            <h3 class="text-lg font-bold text-gray-900">System Health</h3>
          </div>
          <div class="p-6">
            <div class="space-y-4" id="system-health">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="w-3 h-3 bg-green-500 rounded-full mr-3"></div>
                  <span class="text-sm font-medium text-gray-900">Database (D1)</span>
                </div>
                <span class="text-sm text-gray-500">Healthy</span>
              </div>
              
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="w-3 h-3 bg-green-500 rounded-full mr-3"></div>
                  <span class="text-sm font-medium text-gray-900">Authentication (Supabase)</span>
                </div>
                <span class="text-sm text-gray-500">Healthy</span>
              </div>
              
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="w-3 h-3 bg-green-500 rounded-full mr-3"></div>
                  <span class="text-sm font-medium text-gray-900">API Services</span>
                </div>
                <span class="text-sm text-gray-500">Healthy</span>
              </div>
              
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="w-3 h-3 bg-yellow-500 rounded-full mr-3"></div>
                  <span class="text-sm font-medium text-gray-900">External Integrations</span>
                </div>
                <span class="text-sm text-gray-500">Degraded</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Recent Activity -->
        <div class="bg-white rounded-lg shadow">
          <div class="p-6 border-b border-gray-200">
            <h3 class="text-lg font-bold text-gray-900">Recent Admin Activity</h3>
          </div>
          <div class="p-6">
            <div class="space-y-4" id="recent-activity">
              <div class="flex items-start">
                <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-3 mt-1">
                  <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900">User created: john@company.com</p>
                  <p class="text-sm text-gray-500">2 hours ago by admin@nyuchi.com</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center mr-3 mt-1">
                  <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900">Organization updated: Acme Corp</p>
                  <p class="text-sm text-gray-500">4 hours ago by admin@nyuchi.com</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center mr-3 mt-1">
                  <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900">System alert: High API usage</p>
                  <p class="text-sm text-gray-500">6 hours ago</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Platform Statistics -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex items-center">
            <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-600">Total Users</p>
              <p class="text-2xl font-bold text-gray-900" id="total-users">2,847</p>
              <p class="text-sm text-green-600">+12% this month</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex items-center">
            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-600">Organizations</p>
              <p class="text-2xl font-bold text-gray-900" id="total-orgs">423</p>
              <p class="text-sm text-green-600">+8% this month</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex items-center">
            <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-600">API Calls Today</p>
              <p class="text-2xl font-bold text-gray-900" id="api-calls">127K</p>
              <p class="text-sm text-red-600">+23% vs yesterday</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Product Usage -->
      <div class="bg-white rounded-lg shadow">
        <div class="p-6 border-b border-gray-200">
          <h3 class="text-lg font-bold text-gray-900">Product Usage Overview</h3>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="text-center">
              <div class="inline-flex items-center justify-center w-12 h-12 bg-blue-100 rounded-lg mb-3">
                <span class="text-2xl">📧</span>
              </div>
              <h4 class="text-lg font-bold text-gray-900">Mail Organizer</h4>
              <p class="text-3xl font-bold text-blue-600 mt-2">1,234</p>
              <p class="text-sm text-gray-600">Active users</p>
            </div>

            <div class="text-center">
              <div class="inline-flex items-center justify-center w-12 h-12 bg-green-100 rounded-lg mb-3">
                <span class="text-2xl">🔍</span>
              </div>
              <h4 class="text-lg font-bold text-gray-900">SEO Manager</h4>
              <p class="text-3xl font-bold text-green-600 mt-2">567</p>
              <p class="text-sm text-gray-600">Active users</p>
            </div>

            <div class="text-center">
              <div class="inline-flex items-center justify-center w-12 h-12 bg-purple-100 rounded-lg mb-3">
                <span class="text-2xl">📊</span>
              </div>
              <h4 class="text-lg font-bold text-gray-900">Analytics Pro</h4>
              <p class="text-3xl font-bold text-purple-600 mt-2">890</p>
              <p class="text-sm text-gray-600">Active users</p>
            </div>

            <div class="text-center">
              <div class="inline-flex items-center justify-center w-12 h-12 bg-indigo-100 rounded-lg mb-3">
                <span class="text-2xl">✈️</span>
              </div>
              <h4 class="text-lg font-bold text-gray-900">Travel Platform</h4>
              <p class="text-3xl font-bold text-indigo-600 mt-2">345</p>
              <p class="text-sm text-gray-600">Active users</p>
            </div>

            <div class="text-center">
              <div class="inline-flex items-center justify-center w-12 h-12 bg-orange-100 rounded-lg mb-3">
                <span class="text-2xl">📝</span>
              </div>
              <h4 class="text-lg font-bold text-gray-900">Content Hub</h4>
              <p class="text-3xl font-bold text-orange-600 mt-2">678</p>
              <p class="text-sm text-gray-600">Active users</p>
            </div>

            <div class="text-center">
              <div class="inline-flex items-center justify-center w-12 h-12 bg-red-100 rounded-lg mb-3">
                <span class="text-2xl">📅</span>
              </div>
              <h4 class="text-lg font-bold text-gray-900">Event Widget</h4>
              <p class="text-3xl font-bold text-red-600 mt-2">234</p>
              <p class="text-sm text-gray-600">Active users</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script type="module">
    // Import auth utilities
    import { getCurrentUser, hasPermission, getRoleDisplayName, logout } from '../utils/auth.ts';
    
    // Check authentication on page load
    const user = getCurrentUser();
    if (!user) {
      // Use environment-appropriate domains
      const identityDomain = import.meta.env.IDENTITY_DOMAIN || 'identity.nyuchi.com';
      const adminDomain = import.meta.env.ADMIN_DOMAIN || 'admin.nyuchi.com';
      const isPreview = import.meta.env.ENVIRONMENT === 'preview';
      
      if (isPreview) {
        // For preview, just redirect to login page within same domain
        window.location.href = '/login?redirect=/admin';
      } else {
        window.location.href = `https://${identityDomain}?redirect=https://${adminDomain}`;
      }
      throw new Error('Not authenticated');
    }
    
    // Update user info display
    document.getElementById('user-name').textContent = user.name;
    document.getElementById('user-role').textContent = getRoleDisplayName(user.role);
    
    // Add logout handler
    window.handleLogout = function() {
      if (confirm('Are you sure you want to logout?')) {
        logout();
      }
    };
    
    // Filter admin actions based on permissions
    filterAdminActions();
    
    function filterAdminActions() {
      const actions = document.querySelectorAll('.admin-action');
      let visibleCount = 0;
      
      actions.forEach(action => {
        const requiredPermission = action.dataset.permission;
        
        if (requiredPermission && !hasPermission(requiredPermission)) {
          action.style.display = 'none';
        } else {
          visibleCount++;
        }
      });
      
      // Adjust grid layout based on visible items
      const actionsContainer = document.getElementById('admin-actions');
      const gridCols = Math.min(visibleCount, 5);
      actionsContainer.className = actionsContainer.className.replace(
        /lg:grid-cols-\d+/, 
        `lg:grid-cols-${gridCols}`
      );
    }
    
    // Load dashboard data
    document.addEventListener('DOMContentLoaded', async function() {
      try {
        // Load system health
        const healthResponse = await fetch('/api/admin/health', {
          headers: {
            'Authorization': 'Bearer admin-token' // In production, get from auth state
          }
        });
        
        if (healthResponse.ok) {
          const healthData = await healthResponse.json();
          updateSystemHealth(healthData);
        }
        
        // Load system status
        const statusResponse = await fetch('/api/admin/status', {
          headers: {
            'Authorization': 'Bearer admin-token'
          }
        });
        
        if (statusResponse.ok) {
          const statusData = await statusResponse.json();
          updateDashboardStats(statusData);
        }
        
      } catch (error) {
        console.error('Error loading dashboard data:', error);
      }
    });

    function updateSystemHealth(data) {
      // Update system health indicators based on real data
      const healthContainer = document.getElementById('system-health');
      // Implementation would update the health status indicators
    }

    function updateDashboardStats(data) {
      // Update statistics with real data
      if (data.statistics) {
        const stats = data.statistics;
        
        // Update user counts by role
        document.getElementById('total-users').textContent = 
          (stats.users?.total || 0).toLocaleString();
        
        // Update org count
        document.getElementById('total-orgs').textContent = 
          (stats.organizations?.total || 0).toLocaleString();
        
        // Update API usage
        document.getElementById('api-calls').textContent = 
          (stats.api_usage?.total_calls_today || 0).toLocaleString();
      }
    }
  </script>
</Layout>
