---
// Header component with navigation
---

<header class="bg-white shadow-sm border-b border-gray-200">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-2">
          <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <span class="text-xl font-bold text-gray-900">Nyuchi</span>
        </a>
      </div>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-gray-600 hover:text-gray-900 transition-colors">Home</a>
        <a href="/mail-organizer" class="text-gray-600 hover:text-gray-900 transition-colors">Mail Organizer</a>
        <a href="/products" class="text-gray-600 hover:text-gray-900 transition-colors">Products</a>
        <a href="/blog" class="text-gray-600 hover:text-gray-900 transition-colors">Blog</a>
        <a href="/about" class="text-gray-600 hover:text-gray-900 transition-colors">About</a>
      </nav>

      <!-- CTA Buttons -->
      <div class="flex items-center space-x-4">
        <a href="/extension" class="btn btn-secondary text-sm">
          Install Extension
        </a>
        <a href="/dashboard" class="btn btn-primary text-sm">
          Dashboard
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button id="mobile-menu-button" class="text-gray-600 hover:text-gray-900">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-4">
        <a href="/" class="text-gray-600 hover:text-gray-900 transition-colors">Home</a>
        <a href="/mail-organizer" class="text-gray-600 hover:text-gray-900 transition-colors">Mail Organizer</a>
        <a href="/products" class="text-gray-600 hover:text-gray-900 transition-colors">Products</a>
        <a href="/blog" class="text-gray-600 hover:text-gray-900 transition-colors">Blog</a>
        <a href="/about" class="text-gray-600 hover:text-gray-900 transition-colors">About</a>
        <div class="pt-4 border-t border-gray-200">
          <a href="/extension" class="btn btn-secondary text-sm w-full mb-2">
            Install Extension
          </a>
          <a href="/dashboard" class="btn btn-primary text-sm w-full">
            Dashboard
          </a>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>
