---
// Products Management Dashboard Page
import DashboardLayout from '../../../layouts/Layout.astro';
import ProductManager from '../components/ProductManager.astro';
import ProductRegistrationModal from '../components/ProductRegistrationModal.astro';
---

<DashboardLayout title="Product Management">
  <div class="products-page">
    <div class="page-header">
      <div class="header-content">
        <h1 class="page-title">Product Management</h1>
        <p class="page-description">
          Manage external product repositories, deployments, and configurations from a central dashboard.
        </p>
      </div>
      
      <div class="header-actions">
        <button class="btn btn-outline" data-action="refresh-products">
          <span class="icon">üîÑ</span>
          Refresh
        </button>
        <button class="btn btn-primary" onclick="openProductModal()">
          <span class="icon">+</span>
          Register Product
        </button>
      </div>
    </div>

    <div class="products-overview">
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-icon active">üì¶</div>
          <div class="stat-content">
            <div class="stat-number">5</div>
            <div class="stat-label">Active Products</div>
          </div>
        </div>
        
        <div class="stat-card">
          <div class="stat-icon deploying">üöÄ</div>
          <div class="stat-content">
            <div class="stat-number">2</div>
            <div class="stat-label">Deploying</div>
          </div>
        </div>
        
        <div class="stat-card">
          <div class="stat-icon success">‚úÖ</div>
          <div class="stat-content">
            <div class="stat-number">12</div>
            <div class="stat-label">Successful Deployments</div>
          </div>
        </div>
        
        <div class="stat-card">
          <div class="stat-icon warning">‚ö†Ô∏è</div>
          <div class="stat-content">
            <div class="stat-number">1</div>
            <div class="stat-label">Failed Deployments</div>
          </div>
        </div>
      </div>
    </div>

    <ProductManager />
  </div>

  <ProductRegistrationModal />
</DashboardLayout>

<style>
  .products-page {
    padding: 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 2rem;
    gap: 2rem;
  }

  .header-content {
    flex: 1;
  }

  .page-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 0.5rem 0;
  }

  .page-description {
    color: var(--text-muted);
    font-size: 1rem;
    margin: 0;
    line-height: 1.5;
  }

  .header-actions {
    display: flex;
    gap: 0.75rem;
    flex-shrink: 0;
  }

  .products-overview {
    margin-bottom: 3rem;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .stat-card {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    transition: all 0.3s ease;
  }

  .stat-card:hover {
    border-color: var(--accent-primary);
    box-shadow: 0 4px 16px rgba(59, 130, 246, 0.1);
  }

  .stat-icon {
    font-size: 2rem;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    flex-shrink: 0;
  }

  .stat-icon.active {
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.2);
  }

  .stat-icon.deploying {
    background: rgba(251, 191, 36, 0.1);
    border: 1px solid rgba(251, 191, 36, 0.2);
  }

  .stat-icon.success {
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.2);
  }

  .stat-icon.warning {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.2);
  }

  .stat-content {
    flex: 1;
  }

  .stat-number {
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--text-primary);
    line-height: 1;
  }

  .stat-label {
    color: var(--text-muted);
    font-size: 0.875rem;
    margin-top: 0.25rem;
  }

  .icon {
    font-size: 1.125rem;
    margin-right: 0.5rem;
  }

  @media (max-width: 768px) {
    .products-page {
      padding: 1rem;
    }

    .page-header {
      flex-direction: column;
      align-items: stretch;
      gap: 1rem;
    }

    .header-actions {
      justify-content: stretch;
    }

    .header-actions .btn {
      flex: 1;
    }

    .stats-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Refresh products functionality
    document.querySelector('[data-action="refresh-products"]').addEventListener('click', function() {
      // Add loading state
      this.textContent = 'Refreshing...';
      this.disabled = true;
      
      // Simulate refresh (in real app, this would fetch updated data)
      setTimeout(() => {
        this.innerHTML = '<span class="icon">üîÑ</span> Refresh';
        this.disabled = false;
        // In real implementation, update the product list
        location.reload();
      }, 1000);
    });

    // Update stats periodically (in real app, this would come from API)
    function updateStats() {
      // This would fetch real statistics from the backend
      console.log('Updating product statistics...');
    }

    // Update stats every 30 seconds
    setInterval(updateStats, 30000);
  });
</script>