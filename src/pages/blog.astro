---
import { getCollection } from 'astro:content';
import MarketingLayout from '../../core/layouts/MarketingLayout.astro';

// Get all published blog posts, sorted by date
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

const sortedPosts = allPosts.sort((a, b) => {
  return new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime();
});

// Featured posts (first 3)
const featuredPosts = sortedPosts.filter(post => post.data.featured).slice(0, 3);
const recentPosts = sortedPosts.slice(0, 6);
---

<MarketingLayout title="Blog - Nyuchi Africa Insights & Innovation">
  <!-- Hero Section -->
  <section class="hero-marketing">
    <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black/50"></div>
    <div class="container-marketing relative z-10">
      <div class="text-center max-w-6xl mx-auto">
        <div class="badge-zw-green mb-8">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
          </svg>
          Latest Insights
        </div>
        <h1 class="heading-hero mb-8">
          Nyuchi Africa
          <br />
          <span class="text-gray-400">Blog</span>
        </h1>
        <p class="text-marketing-body mb-12 max-w-4xl mx-auto">
          Insights on African technology innovation, platform development, and digital transformation 
          across the continent. Stay updated with our latest projects and industry analysis.
        </p>
      </div>
    </div>
    
    <!-- Background grid -->
    <div class="hero-marketing-grid">
      <div class="grid grid-cols-12 gap-px h-full">
        <div class="hero-marketing-grid-item"></div>
        <div class="hero-marketing-grid-item"></div>
        <div class="hero-marketing-grid-item"></div>
        <div class="hero-marketing-grid-item"></div>
        <div class="hero-marketing-grid-item"></div>
        <div class="hero-marketing-grid-item"></div>
        <div class="hero-marketing-grid-item"></div>
        <div class="hero-marketing-grid-item"></div>
        <div class="hero-marketing-grid-item"></div>
        <div class="hero-marketing-grid-item"></div>
        <div class="hero-marketing-grid-item"></div>
        <div class="hero-marketing-grid-item"></div>
      </div>
    </div>
  </section>

  <!-- Featured Posts -->
  {featuredPosts.length > 0 && (
    <section class="section-padding section-gray-900">
      <div class="container-marketing">
        <div class="text-center mb-20">
          <h2 class="heading-section mb-6">
            Featured <span class="text-gray-400">Posts</span>
          </h2>
          <p class="text-marketing-body max-w-3xl mx-auto">
            Our most important insights and updates
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {featuredPosts.map((post) => (
            <article class="card-marketing hover-lift h-full">
              <div class="flex flex-col h-full">
                {post.data.image && (
                  <div class="aspect-video mb-6 bg-gray-800 rounded-lg overflow-hidden">
                    <img 
                      src={post.data.image} 
                      alt={post.data.title}
                      class="w-full h-full object-cover"
                    />
                  </div>
                )}
                
                <div class="flex-grow">
                  <div class="flex items-center gap-2 mb-4">
                    {post.data.category && (
                      <span class="badge-zw-green text-xs">
                        {post.data.category}
                      </span>
                    )}
                    <span class="text-xs text-gray-400">
                      {new Date(post.data.publishDate).toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </span>
                  </div>
                  
                  <h3 class="text-xl font-medium text-white mb-4 leading-tight">
                    <a href={`/blog/${post.slug}`} class="hover:text-green-400 transition-colors">
                      {post.data.title}
                    </a>
                  </h3>
                  
                  <p class="text-marketing-muted mb-6 line-clamp-3">
                    {post.data.description}
                  </p>
                </div>
                
                <div class="flex items-center justify-between mt-auto">
                  <span class="text-sm text-gray-400">
                    By {post.data.author}
                  </span>
                  <a 
                    href={`/blog/${post.slug}`}
                    class="text-green-400 hover:text-green-300 transition-colors text-sm font-medium"
                  >
                    Read More →
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Recent Posts -->
  <section class="section-padding section-black">
    <div class="container-marketing">
      <div class="text-center mb-20">
        <h2 class="heading-section mb-6">
          Recent <span class="text-gray-400">Posts</span>
        </h2>
        <p class="text-marketing-body max-w-3xl mx-auto">
          Latest updates from our team and industry insights
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {recentPosts.map((post) => (
          <article class="card-marketing hover-lift h-full">
            <div class="flex flex-col h-full">
              {post.data.image && (
                <div class="aspect-video mb-6 bg-gray-800 rounded-lg overflow-hidden">
                  <img 
                    src={post.data.image} 
                    alt={post.data.title}
                    class="w-full h-full object-cover"
                  />
                </div>
              )}
              
              <div class="flex-grow">
                <div class="flex items-center gap-2 mb-4">
                  {post.data.category && (
                    <span class="text-xs px-2 py-1 bg-gray-700 text-gray-300 rounded-full">
                      {post.data.category}
                    </span>
                  )}
                  <span class="text-xs text-gray-400">
                    {new Date(post.data.publishDate).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </span>
                </div>
                
                <h3 class="text-xl font-medium text-white mb-4 leading-tight">
                  <a href={`/blog/${post.slug}`} class="hover:text-green-400 transition-colors">
                    {post.data.title}
                  </a>
                </h3>
                
                <p class="text-marketing-muted mb-6 line-clamp-3">
                  {post.data.description}
                </p>
                
                {post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mb-4">
                    {post.data.tags.slice(0, 3).map((tag) => (
                      <span class="text-xs px-2 py-1 bg-gray-800 text-gray-400 rounded-full">
                        #{tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
              
              <div class="flex items-center justify-between mt-auto">
                <span class="text-sm text-gray-400">
                  By {post.data.author}
                </span>
                <a 
                  href={`/blog/${post.slug}`}
                  class="text-green-400 hover:text-green-300 transition-colors text-sm font-medium"
                >
                  Read More →
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>

      {sortedPosts.length === 0 && (
        <div class="text-center py-16">
          <div class="text-gray-400 mb-4">
            <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
            </svg>
          </div>
          <h3 class="text-xl text-white mb-2">No posts yet</h3>
          <p class="text-gray-400">Check back soon for our latest insights and updates.</p>
        </div>
      )}
    </div>
  </section>

  <!-- Newsletter Signup -->
  <section class="section-padding section-gray-900">
    <div class="container-marketing">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="heading-section mb-6">
          Stay <span class="text-gray-400">Updated</span>
        </h2>
        <p class="text-marketing-body mb-8">
          Subscribe to our newsletter to get the latest insights delivered to your inbox
        </p>
        
        <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
          <input 
            type="email" 
            placeholder="Enter your email"
            class="flex-grow px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg focus:border-green-500 focus:ring-1 focus:ring-green-500 outline-none transition-colors text-white"
            required
          />
          <button 
            type="submit"
            class="btn-marketing-primary whitespace-nowrap"
          >
            Subscribe
          </button>
        </form>
        
        <p class="text-sm text-gray-400 mt-4">
          No spam, unsubscribe at any time.
        </p>
      </div>
    </div>
  </section>
</MarketingLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>