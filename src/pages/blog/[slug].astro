---
import { getCollection } from 'astro:content';
import MarketingLayout from '../../layouts/MarketingLayout.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog', ({ data }) => {
    return data.draft !== true;
  });
  
  return allPosts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Get related posts (same category, excluding current post)
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

const relatedPosts = allPosts
  .filter(p => p.slug !== post.slug && p.data.category === post.data.category)
  .slice(0, 3);
---

<MarketingLayout title={`${post.data.title} - Nyuchi Africa Blog`} description={post.data.description}>
  <!-- Blog Post Header -->
  <section class="section-padding section-gray-900 pt-32">
    <div class="container-marketing">
      <div class="max-w-4xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="flex items-center space-x-2 text-sm mb-8">
          <a href="/" class="text-gray-400 hover:text-white transition-colors">Home</a>
          <span class="text-gray-600">›</span>
          <a href="/blog" class="text-gray-400 hover:text-white transition-colors">Blog</a>
          <span class="text-gray-600">›</span>
          <span class="text-white">{post.data.title}</span>
        </nav>

        <!-- Post Meta -->
        <div class="flex items-center gap-4 mb-6">
          {post.data.category && (
            <span class="badge-zw-green text-sm">
              {post.data.category}
            </span>
          )}
          <span class="text-sm text-gray-400">
            {new Date(post.data.publishDate).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </span>
          {post.data.updatedDate && (
            <span class="text-sm text-gray-400">
              Updated: {new Date(post.data.updatedDate).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long', 
                day: 'numeric'
              })}
            </span>
          )}
        </div>

        <!-- Post Title -->
        <h1 class="heading-hero text-4xl md:text-5xl lg:text-6xl mb-6">
          {post.data.title}
        </h1>

        <!-- Post Description -->
        <p class="text-marketing-body text-xl mb-8">
          {post.data.description}
        </p>

        <!-- Author & Reading Time -->
        <div class="flex items-center justify-between border-t border-gray-800 pt-6 mb-8">
          <div class="flex items-center">
            <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-full flex items-center justify-center mr-4">
              <span class="text-white font-medium text-sm">
                {post.data.author.charAt(0)}
              </span>
            </div>
            <div>
              <div class="text-white font-medium">{post.data.author}</div>
              <div class="text-gray-400 text-sm">Author</div>
            </div>
          </div>

          <!-- Share Buttons -->
          <div class="flex items-center space-x-4">
            <span class="text-gray-400 text-sm">Share:</span>
            <a 
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(`https://www.nyuchi.com/blog/${post.slug}`)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-white transition-colors"
              title="Share on Twitter"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M22.46 6c-.77.35-1.6.58-2.46.69.88-.53 1.56-1.37 1.88-2.38-.83.5-1.75.85-2.72 1.05C18.37 4.5 17.26 4 16 4c-2.35 0-4.27 1.92-4.27 4.29 0 .34.04.67.11.98C8.28 9.09 5.11 7.38 3 4.79c-.37.63-.58 1.37-.58 2.15 0 1.49.75 2.81 1.91 3.56-.71 0-1.37-.2-1.95-.5v.03c0 2.08 1.48 3.82 3.44 4.21a4.22 4.22 0 0 1-1.93.07 4.28 4.28 0 0 0 4 2.98 8.521 8.521 0 0 1-5.33 1.84c-.34 0-.68-.02-1.02-.06C3.44 20.29 5.7 21 8.12 21 16 21 20.33 14.46 20.33 8.79c0-.19 0-.37-.01-.56.84-.6 1.56-1.36 2.14-2.23z"/>
              </svg>
            </a>
            <a 
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(`https://www.nyuchi.com/blog/${post.slug}`)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-white transition-colors"
              title="Share on LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Featured Image -->
        {post.data.image && (
          <div class="aspect-video mb-12 bg-gray-800 rounded-xl overflow-hidden">
            <img 
              src={post.data.image} 
              alt={post.data.title}
              class="w-full h-full object-cover"
            />
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Blog Content -->
  <section class="section-padding section-black">
    <div class="container-marketing">
      <div class="max-w-4xl mx-auto">
        <article class="prose prose-invert prose-lg prose-green max-w-none">
          <Content />
        </article>

        <!-- Tags -->
        {post.data.tags.length > 0 && (
          <div class="border-t border-gray-800 pt-8 mt-12">
            <div class="flex items-center gap-2 mb-4">
              <span class="text-gray-400 font-medium">Tags:</span>
              <div class="flex flex-wrap gap-2">
                {post.data.tags.map((tag) => (
                  <span class="text-sm px-3 py-1 bg-gray-800 text-gray-300 rounded-full hover:bg-gray-700 transition-colors cursor-pointer">
                    #{tag}
                  </span>
                ))}
              </div>
            </div>
          </div>
        )}

        <!-- Back to Blog -->
        <div class="border-t border-gray-800 pt-8 mt-12">
          <a 
            href="/blog"
            class="inline-flex items-center text-green-400 hover:text-green-300 transition-colors font-medium"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Blog
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Posts -->
  {relatedPosts.length > 0 && (
    <section class="section-padding section-gray-900">
      <div class="container-marketing">
        <div class="max-w-4xl mx-auto">
          <h2 class="heading-section text-center mb-12">
            Related <span class="text-gray-400">Posts</span>
          </h2>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {relatedPosts.map((relatedPost) => (
              <article class="card-marketing hover-lift">
                {relatedPost.data.image && (
                  <div class="aspect-video mb-4 bg-gray-800 rounded-lg overflow-hidden">
                    <img 
                      src={relatedPost.data.image} 
                      alt={relatedPost.data.title}
                      class="w-full h-full object-cover"
                    />
                  </div>
                )}
                
                <h3 class="text-lg font-medium text-white mb-3 leading-tight">
                  <a href={`/marketing/blog/${relatedPost.slug}`} class="hover:text-green-400 transition-colors">
                    {relatedPost.data.title}
                  </a>
                </h3>
                
                <p class="text-marketing-muted text-sm mb-4 line-clamp-2">
                  {relatedPost.data.description}
                </p>
                
                <div class="flex items-center justify-between">
                  <span class="text-xs text-gray-400">
                    {new Date(relatedPost.data.publishDate).toLocaleDateString('en-US', {
                      month: 'short',
                      day: 'numeric',
                      year: 'numeric'
                    })}
                  </span>
                  <a 
                    href={`/blog/${relatedPost.slug}`}
                    class="text-green-400 hover:text-green-300 transition-colors text-sm font-medium"
                  >
                    Read More →
                  </a>
                </div>
              </article>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="cta-marketing">
    <div class="container-marketing">
      <h2 class="heading-section mb-8">
        Ready to <span class="text-gray-400">Innovate?</span>
      </h2>
      <p class="text-marketing-body mb-12 max-w-3xl mx-auto">
        Transform your business with cutting-edge digital solutions
      </p>
      <div class="flex flex-col sm:flex-row gap-6 justify-center">
        <a href="/marketing/contact" class="btn-marketing-primary">
          Start a Project
        </a>
        <a href="/marketing/about" class="btn-marketing-secondary">
          Learn About Us
        </a>
      </div>
    </div>
  </section>
</MarketingLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Custom prose styles for dark theme */
  .prose-green {
    --tw-prose-links: rgb(34 197 94);
    --tw-prose-bold: rgb(255 255 255);
    --tw-prose-headings: rgb(255 255 255);
    --tw-prose-code: rgb(34 197 94);
    --tw-prose-quotes: rgb(156 163 175);
    --tw-prose-quote-borders: rgb(75 85 99);
    --tw-prose-hr: rgb(55 65 81);
    --tw-prose-th-borders: rgb(75 85 99);
    --tw-prose-td-borders: rgb(55 65 81);
  }
  
  .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
    font-family: 'Playfair Display', serif;
  }
</style>